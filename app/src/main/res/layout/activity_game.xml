<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".70"
        xmlns:android="http://schemas.android.com/apk/res/android" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numbers_table_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_recycler_view">
        <TableRow
            android:id="@+id/sudoku_button_group">
            <Button android:text="1"
                android:layout_width="0dp"
                android:layout_weight=".11"
                android:layout_height="60dp"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
            <Button android:text="2"
                android:layout_width="0dp"
                android:layout_weight=".11"
                android:layout_height="60dp"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
            <Button android:text="3"
                android:layout_width="0dp"
                android:layout_weight=".11"
                android:layout_height="60dp"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
            <Button android:text="4"
                android:layout_width="0dp"
                android:layout_weight=".11"
                android:layout_height="60dp"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
            <Button android:text="5"
                android:layout_width="0dp"
                android:layout_weight=".11"
                android:layout_height="60dp"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
            <Button android:text="6"
                android:layout_width="0dp"
                android:layout_weight=".11"
                android:layout_height="60dp"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
            <Button android:text="7"
                android:layout_width="0dp"
                android:layout_weight=".11"
                android:layout_height="60dp"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
            <Button android:text="8"
                android:layout_width="0dp"
                android:layout_weight=".11"
                android:layout_height="60dp"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
            <Button android:text="9"
                android:layout_width="0dp"
                android:layout_weight=".11"
                android:layout_height="60dp"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/numbers_table_layout">
        <TableRow
            android:gravity="center">
            <Button
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/clean_btn"
                android:background="@drawable/button_background"
                android:text="@string/effacer"
                android:textColor="@color/colorPrimary"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/new_grid_btn"
                android:background="@drawable/button_background"
                android:text="@string/new_grid"
                android:textColor="@color/colorPrimary"/>
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>